@model IEnumerable<reservation_tracker.Models.ViewModels.ReservationIndexViewModel>

@{
    ViewData["Title"] = "Index";

    // Helper
    string currentSort = ViewData["Sort"]?.ToString();
    string currentDir = ViewData["Dir"]?.ToString() ?? "asc";

    string Arrow(string column)
    {
        if (currentSort != column)
            return "";

        return currentDir == "asc" ? " ↑" : " ↓";
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                asp-route-sort="DateReserved"
                asp-route-dir="@(ViewData["Sort"]?.ToString() == "DateReserved" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.DateReserved)@Arrow("DateReserved")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sort="LastName"
                   asp-route-dir="@(ViewData["Sort"]?.ToString() == "LastName" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.GuestFullName)@Arrow("LastName")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sort="CheckInDate"
                   asp-route-dir="@(ViewData["Sort"]?.ToString() == "CheckInDate" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                @Html.DisplayNameFor(model => model.CheckInDate)@Arrow("CheckInDate")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                asp-route-sort="CheckOutDate"
                asp-route-dir="@(ViewData["Sort"]?.ToString() == "CheckOutDate" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                @Html.DisplayNameFor(model => model.CheckOutDate)@Arrow("CheckOutDate")
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardLastFour)
            </th>
            <th>
                <a asp-action="Index"
                asp-route-sort="RoomNumber"
                asp-route-dir="@(ViewData["Sort"]?.ToString() == "RoomNumber" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.RoomNumber)@Arrow("RoomNumber")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                asp-route-sort="DisplayName"
                asp-route-dir="@(ViewData["Sort"]?.ToString() == "DisplayName" && ViewData["Dir"]?.ToString() == "asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.ReservedByDisplayName)@Arrow("DisplayName")
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateReserved)
            </td>
            <td>
                @item.GuestFullName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                    <span class="@(item.Status?.Equals("Canceled", StringComparison.OrdinalIgnoreCase) == true
                                  ? "fw-bold text-danger"
                                  : "")">
                        @item.Status
                    </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardLastFour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                    @(
                        item.ReservedByDisplayName != null
                        ? item.ReservedByDisplayName
                        : "-"
                )
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
